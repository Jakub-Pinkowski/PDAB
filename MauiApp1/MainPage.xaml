<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine"/>
            <Label
                Text="Home"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"/>
            <Label
                Text="All the tables can be accessed via a hamburger menu in the top left corner."
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level2"/>
            <Button
                Text="Reset Database - USE WITH CAUTION!"
                Clicked="OnResetDatabaseClicked"/>

            <Button
                Text="Backup Database"
                Clicked="OnBackupDatabaseClicked"/>

            <Button
                Text="Refresh Data"
                Clicked="OnRefreshDataClicked"/>

            <!-- Customer Orders View -->
            <ScrollView>
                <StackLayout x:Name="CustomerSpendingChart"
                             Orientation="Vertical"
                             Padding="10"/>
            </ScrollView>
            <Label
                Text="Customer Orders - business logic view #1"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level2"/>
            <Label
                Text="Description: This view displays the total amounts of orders placed by each customer"
                Style="{StaticResource Subheadline}"
                SemanticProperties.HeadingLevel="Level3"/>
            <Label
                Text="Purpose: To provide a comprehensive overview of the total amounts of customer orders"
                Style="{StaticResource Subheadline}"
                SemanticProperties.HeadingLevel="Level3"/>
            <ListView x:Name="CustomerOrdersListView"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Customer:"
                                       FontAttributes="Bold"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding CustomerName}"
                                       Grid.Row="0"
                                       Grid.Column="1"/>
                                <Label Text="Customer Email:"
                                       FontAttributes="Bold"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding CustomerEmail}"
                                       Grid.Row="1"
                                       Grid.Column="1"/>
                                <Label Text="Total Amount:"
                                       FontAttributes="Bold"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding TotalAmount, StringFormat='Total Amount: {0:C}'}"
                                       Grid.Row="2"
                                       Grid.Column="1"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!-- Product Reviews View -->
            <ScrollView>
                <StackLayout x:Name="ProductReviewChart"/>
            </ScrollView>
            <Label
                Text="Product Reviews - business logic view #2"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level2"/>
            <Label
                Text="Description: This view shows the reviews for each product. It includes the product name, the name of the customer who reviewed it, the rating given, the review comment, and the product's category."
                Style="{StaticResource Subheadline}"
                SemanticProperties.HeadingLevel="Level3"/>
            <Label
                Text="Purpose: To provide insights into customer feedback on products, helping to understand customer satisfaction and product performance."
                Style="{StaticResource Subheadline}"
                SemanticProperties.HeadingLevel="Level3"/>
            <ListView x:Name="ProductReviewsListView"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Product:"
                                       FontAttributes="Bold"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding ProductName}"
                                       Grid.Row="0"
                                       Grid.Column="1"/>
                                <Label Text="Reviewed by:"
                                       FontAttributes="Bold"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding CustomerName}"
                                       Grid.Row="1"
                                       Grid.Column="1"/>
                                <Label Text="Rating:"
                                       FontAttributes="Bold"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding Rating}"
                                       Grid.Row="2"
                                       Grid.Column="1"/>
                                <Label Text="Comment:"
                                       FontAttributes="Bold"
                                       Grid.Row="3"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding Comment}"
                                       Grid.Row="3"
                                       Grid.Column="1"/>
                                <Label Text="Category:"
                                       FontAttributes="Bold"
                                       Grid.Row="4"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding CategoryName}"
                                       Grid.Row="4"
                                       Grid.Column="1"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!-- Order Details View -->
            <Label
                Text="Order Details - business logic view #3"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level2"/>
            <Label
                Text="Description: This view provides detailed information about each order. It includes the order ID, order date, product name, quantity, price, and the total amount for each order."
                Style="{StaticResource Subheadline}"
                SemanticProperties.HeadingLevel="Level3"/>
            <Label
                Text="Purpose: To offer a detailed breakdown of each order, including the products ordered, their quantities, and pricing information."
                Style="{StaticResource Subheadline}"
                SemanticProperties.HeadingLevel="Level3"/>
            <ListView x:Name="OrderDetailsListView"
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Order ID:"
                                       FontAttributes="Bold"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding OrderId}"
                                       Grid.Row="0"
                                       Grid.Column="1"/>
                                <Label Text="Order Date:"
                                       FontAttributes="Bold"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding OrderDate, StringFormat='Order Date: {0:MM/dd/yyyy}'}"
                                       Grid.Row="1"
                                       Grid.Column="1"/>
                                <Label Text="Product:"
                                       FontAttributes="Bold"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding ProductName}"
                                       Grid.Row="2"
                                       Grid.Column="1"/>
                                <Label Text="Quantity:"
                                       FontAttributes="Bold"
                                       Grid.Row="3"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding Quantity}"
                                       Grid.Row="3"
                                       Grid.Column="1"/>
                                <Label Text="Price:"
                                       FontAttributes="Bold"
                                       Grid.Row="4"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding Price, StringFormat='Price: {0:C}'}"
                                       Grid.Row="4"
                                       Grid.Column="1"/>
                                <Label Text="Total Amount:"
                                       FontAttributes="Bold"
                                       Grid.Row="5"
                                       Grid.Column="0"
                                       Padding="0,0,10,0"/>
                                <Label Text="{Binding TotalAmount, StringFormat='Total Amount: {0:C}'}"
                                       Grid.Row="5"
                                       Grid.Column="1"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>