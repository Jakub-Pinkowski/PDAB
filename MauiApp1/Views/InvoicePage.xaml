<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.InvoicePage"
             xmlns:models="clr-namespace:MauiApp1.Models">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Invoice List"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                Margin="0,20,0,0"/>
            <Entry x:Name="OrderIdEntry"
                   Placeholder="Order ID"
                   Keyboard="Numeric"/>
            <Entry x:Name="InvoiceDateEntry"
                   Placeholder="Invoice Date"
                   Keyboard="Numeric"/>
            <Entry x:Name="TotalAmountEntry"
                   Placeholder="Total Amount"
                   Keyboard="Numeric"/>
            <HorizontalStackLayout>
                <Button Text="{Binding ButtonText}"
                        Clicked="OnAddInvoiceClicked"/>
                <Button Text="Cancel"
                        Clicked="OnCancelEditClicked"
                        IsVisible="{Binding IsEditing}"
                        BackgroundColor="#c1121f"
                        TextColor="#fefae0"
                        Margin="10,0,0,0"/>
                <Button Text="Refresh the table"
                        Clicked="OnRefreshClicked"
                        BackgroundColor="#007acc"
                        TextColor="#ffffff"
                        Margin="10,0,0,0"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Margin="10,0,0,0">
                <Button Text="Sort by Order ID"
                        Clicked="OnSortByOrderIdClicked"
                        BackgroundColor="#ff9800"
                        TextColor="#ffffff"
                        Margin="0,0,10,0"/>
                <Button Text="Sort by Date"
                        Clicked="OnSortByInvoiceDateClicked"
                        BackgroundColor="#ff9800"
                        TextColor="#ffffff"
                        Margin="0,0,10,0"/>
                <Button Text="Sort by Amount"
                        Clicked="OnSortByTotalAmountClicked"
                        BackgroundColor="#ff9800"
                        TextColor="#ffffff"
                        Margin="0,0,10,0"/>
            </HorizontalStackLayout>
            <Label Text="Filter by Order ID" Margin="10,0,0,0"/>
            <HorizontalStackLayout Margin="10,0,0,0">
                <Entry x:Name="MinOrderIdEntry"
                       Placeholder="Min Order ID"
                       Keyboard="Numeric"
                       WidthRequest="150"/>
                <Entry x:Name="MaxOrderIdEntry"
                       Placeholder="Max Order ID"
                       Keyboard="Numeric"
                       WidthRequest="150"
                       Margin="10,0,0,0"/>
                <Button Text="Filter"
                        Clicked="OnFilterByOrderIdClicked"
                        BackgroundColor="#4caf50"
                        TextColor="#ffffff"
                        Margin="10,0,0,0"/>
            </HorizontalStackLayout>
            <Label Text="Filter by Invoice Date" Margin="10,0,0,0"/>
            <HorizontalStackLayout Margin="10,0,0,0">
                <Entry x:Name="MinInvoiceDateEntry"
                       Placeholder="Min Invoice Date"
                       Keyboard="Numeric"
                       WidthRequest="150"/>
                <Entry x:Name="MaxInvoiceDateEntry"
                       Placeholder="Max Invoice Date"
                       Keyboard="Numeric"
                       WidthRequest="150"
                       Margin="10,0,0,0"/>
                <Button Text="Filter"
                        Clicked="OnFilterByInvoiceDateClicked"
                        BackgroundColor="#4caf50"
                        TextColor="#ffffff"
                        Margin="10,0,0,0"/>
            </HorizontalStackLayout>
            <Label Text="Filter by Total Amount" Margin="10,0,0,0"/>
            <HorizontalStackLayout Margin="10,0,0,0">
                <Entry x:Name="MinTotalAmountEntry"
                       Placeholder="Min Total Amount"
                       Keyboard="Numeric"
                       WidthRequest="150"/>
                <Entry x:Name="MaxTotalAmountEntry"
                       Placeholder="Max Total Amount"
                       Keyboard="Numeric"
                       WidthRequest="150"
                       Margin="10,0,0,0"/>
                <Button Text="Filter"
                        Clicked="OnFilterByTotalAmountClicked"
                        BackgroundColor="#4caf50"
                        TextColor="#ffffff"
                        Margin="10,0,0,0"/>
            </HorizontalStackLayout>
            <!-- Headers for the table -->
            <Grid ColumnDefinitions="*,*,*,0.5*,0.5*"
                  Padding="10,0">
                <Label Text="Order ID"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Label Text="Invoice Date"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Grid.Column="1"/>
                <Label Text="Total Amount"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       Grid.Column="2"/>
            </Grid>
            <CollectionView x:Name="InvoicesCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Invoice">
                        <VerticalStackLayout Margin="0,5">
                            <Border Stroke="#fefae0"
                                    StrokeShape="RoundRectangle 10"
                                    Padding="5">
                                <Grid ColumnDefinitions="*,*,*,0.5*,0.5*"
                                      Padding="10">
                                    <Label Text="{Binding OrderId}"
                                           FontSize="20"
                                           VerticalOptions="Center"
                                           Grid.Column="0"/>
                                    <Label Text="{Binding InvoiceDate, StringFormat='{0:yyyy-MM-dd}'}"
                                           FontSize="20"
                                           VerticalOptions="Center"
                                           Grid.Column="1"/>
                                    <Label Text="{Binding TotalAmount}"
                                           FontSize="20"
                                           VerticalOptions="Center"
                                           Grid.Column="2"/>
                                    <Button Grid.Column="3"
                                            Text="Edit"
                                            Clicked="OnEditInvoiceClicked"
                                            CommandParameter="{Binding .}"
                                            CornerRadius="5"
                                            VerticalOptions="Center"
                                            Margin="0,0,10,0"/>
                                    <Button Grid.Column="4"
                                            Text="Delete"
                                            Clicked="OnDeleteInvoiceClicked"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#c1121f"
                                            TextColor="#fefae0"
                                            CornerRadius="5"
                                            VerticalOptions="Center"
                                            Margin="10,0,0,0"/>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>